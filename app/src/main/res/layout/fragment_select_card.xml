<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mercado_libre"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Seleccione una tarjeta por favor"
                android:textColor="#000"
                android:layout_marginTop="10dp"/>

            <FrameLayout
                android:id="@+id/selectCardButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@drawable/border_editext">

                <TextView
                    android:id="@+id/textCardSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="N/A Seleccionada"
                    android:textColor="#000"/>

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/siguienteButtonSC"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/button_shadow"
                android:text="Siguiente"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siguiente"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>


    </LinearLayout>

</LinearLayout>